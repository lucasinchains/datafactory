{
	"name": "taxisDataFlow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "taxisInput",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          pickup as string,",
				"          dropoff as string,",
				"          passengers as short,",
				"          distance as double,",
				"          fare as double,",
				"          tip as double,",
				"          tolls as double,",
				"          color as string,",
				"          payment as string,",
				"          pickup_zone as string,",
				"          dropoff_zone as string,",
				"          pickup_borough as string,",
				"          dropoff_borough as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> source1",
				"source1 derive(total = (fare+tip+tolls),",
				"          dollarsPerMile = (fare+tip+tolls)/distance,",
				"          pickUpLong = concat(pickup_zone, ' ', pickup_borough),",
				"          dropOffLong = concat(dropoff_zone, ' ', dropoff_borough),",
				"          pickUpTime = (trim(right(pickup,5),'()')),",
				"          column1 = toTimestamp(pickup,'yyyy-MM-dd HH:mm'),",
				"     partitionBy('hash', 1)) ~> derivedColumn1"
			]
		}
	}
}