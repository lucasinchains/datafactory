{
	"name": "taxisDataFlow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "taxisInput",
						"type": "DatasetReference"
					},
					"name": "inputTaxis",
					"description": "Import data from taxisInput and changing fields datatypes"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "calculations",
					"description": "creating new measures: . journeyTime, totalSpent, totalSpentByDistance, pickUpLong, dropOffLong"
				}
			],
			"scriptLines": [
				"source(output(",
				"          pickup as timestamp,",
				"          dropoff as timestamp,",
				"          passengers as short,",
				"          distance as double,",
				"          fare as double,",
				"          tip as double,",
				"          tolls as double,",
				"          color as string,",
				"          payment as string,",
				"          pickup_zone as string,",
				"          dropoff_zone as string,",
				"          pickup_borough as string,",
				"          dropoff_borough as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> inputTaxis",
				"inputTaxis derive(journeyTime = dropoff-pickup) ~> calculations"
			]
		}
	}
}