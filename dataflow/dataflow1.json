{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "moviesinput",
						"type": "DatasetReference"
					},
					"name": "moviesinput"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "moviesoutput",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "yearExtract",
					"description": "Extract the year from title and then modify the title to display only the movie name"
				},
				{
					"name": "sort",
					"description": "Sorting rows on columns 'year' in descending order"
				}
			],
			"scriptLines": [
				"source(output(",
				"          movieId as string,",
				"          title as string,",
				"          genres as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> moviesinput",
				"moviesinput derive(year = ERROR_FUNCTION(''),",
				"          title = toString(left(title,length(title)-6))) ~> yearExtract",
				"yearExtract sort(desc(year, true)) ~> sort",
				"sort sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['MoviesFinal.csv'],",
				"     truncate: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}